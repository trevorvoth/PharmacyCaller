# PharmacyCaller Environment Variables
# Copy this file to .env and fill in your values

# ===================
# Server Configuration
# ===================
PORT=3000
NODE_ENV=development
LOG_LEVEL=debug

# ===================
# Database
# ===================
# Local development (docker-compose uses port 5433)
DATABASE_URL=postgresql://postgres:postgres@localhost:5433/pharmacycaller

# Docker internal (used by backend container)
# DATABASE_URL=postgresql://postgres:postgres@postgres:5432/pharmacycaller

POSTGRES_USER=postgres
POSTGRES_PASSWORD=postgres
POSTGRES_DB=pharmacycaller

# ===================
# Redis
# ===================
# Local development (docker-compose uses port 6380)
REDIS_URL=redis://localhost:6380

# Docker internal (used by backend container)
# REDIS_URL=redis://redis:6379

# ===================
# JWT Authentication
# ===================
# Generate with: openssl rand -base64 32
JWT_SECRET=your-super-secret-jwt-key-change-in-production
JWT_EXPIRES_IN=7d

# ===================
# Twilio
# ===================
# Get from https://console.twilio.com
TWILIO_ACCOUNT_SID=ACxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxx
TWILIO_AUTH_TOKEN=your_auth_token
TWILIO_PHONE_NUMBER=+1XXXXXXXXXX

# API Key for Twilio Client SDK
# Create at https://console.twilio.com/us1/account/keys
TWILIO_API_KEY_SID=SKxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxx
TWILIO_API_KEY_SECRET=your_api_key_secret

# TwiML App for Client SDK voice
# Create at https://console.twilio.com/us1/develop/voice/manage/twiml-apps
TWILIO_TWIML_APP_SID=APxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxx

# ===================
# OpenAI
# ===================
# Get from https://platform.openai.com/api-keys
OPENAI_API_KEY=sk-xxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxx

# ===================
# Google Places API
# ===================
# Get from https://console.cloud.google.com/apis/credentials
GOOGLE_PLACES_API_KEY=AIzaxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxx

# ===================
# Observability (Optional)
# ===================
# Sentry DSN for error tracking
SENTRY_DSN=

# ===================
# Cost Management (Optional)
# ===================
COST_ALERT_THRESHOLD=50
COST_ALERT_EMAIL=alerts@example.com

# ===================
# Rate Limiting
# ===================
MAX_SEARCHES_PER_DAY=10
MAX_CONCURRENT_CALLS=5

# ===================
# Timeouts (seconds)
# ===================
PATIENT_TIMEOUT_SECONDS=120
CALL_TIMEOUT_SECONDS=600
